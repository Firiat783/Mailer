<%= simple_form_for(@message) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :user_id, as: :hidden %>
      <%= f.input :receiver_id %>
      <%= f.input :content %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>