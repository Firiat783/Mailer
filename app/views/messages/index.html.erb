<table class="table">

  <% @messages.each do |message| %>

      <tr>
        <td>
          <%= image_tag User.find(message.sender_id).avatar(:mini) %>
        </td>
        <td> ~> </td>
        <td>
          <%= image_tag User.find(message.receiver_id).avatar(:mini) %>
        </td>


        <td>

          <b><%= link_to message.title, message  %></b>
          <br>
          <%= message.content %>

        </td>


        <td>
          <% if message.sender_id == current_user.id %>
          <%= link_to 'Написать', new_message_path(receiver_id: message.receiver_id) %>
          <% else %>
          <%= link_to 'Написать', new_message_path(receiver_id: message.sender_id ) %>
          <% end %>
        </td>





      </tr>

  <% end  %>

</table>